<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 자주 사용하는 type 의 별칭을 등록해놓고 Mapper xml 에서 사용할 수 있다. -->
	<typeAliases>
		<typeAlias type="com.gura.spring05.users.dto.UsersDto" alias="usersDto"/>
		<typeAlias type="com.gura.spring05.file.dto.FileDto" alias="fileDto"></typeAlias>
		<typeAlias type="com.gura.spring05.cafe.dto.CafeDto" alias="cafeDto"/>
      	<typeAlias type="com.gura.spring05.cafe.dto.CafeCommentDto" alias="cafeCommentDto"/>
	</typeAliases>
	<!-- 필요한 Mapper xml 등록하기 -->
	<mappers>
		<mapper resource="com/gura/spring05/mybatis/UsersMapper.xml"></mapper>
		<mapper resource="com/gura/spring05/mybatis/FileMapper.xml"></mapper>
		<mapper resource="com/gura/spring05/mybatis/CafeMapper.xml"/>
      	<mapper resource="com/gura/spring05/mybatis/CafeCommentMapper.xml"/>
	</mappers>
	
</configuration>